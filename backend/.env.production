NODE_ENV=production

# Port will be set by Render automatically
# PORT=10000

# CORS allowed origins (comma separated) 
CORS_ORIGINS=https://revolve360.vercel.app

# File upload settings
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads

# Parser Microservice Configuration - NEW
PARSER_SERVICE_URL=https://parser.yourdomain.com
PARSER_API_KEY=your_super_long_random_api_key_here_replace_with_actual_key
PARSER_HMAC_SECRET=your_super_long_random_hmac_secret_here_replace_with_actual_secret

# Redis Configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379

# Database Configuration (if adding database)
# DATABASE_URL=postgresql://user:pass@host:port/db

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security Settings
TRUST_PROXY=true
HELMET_ENABLED=true

# Feature Flags
ENABLE_LEGACY_PARSING=false
ENABLE_PARSER_HEALTH_CHECKS=true
PARSER_TIMEOUT_MS=120000

# Share System Settings
SHARE_EXPIRY_DAYS=30
MAX_SHARE_SIZE_MB=10